<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >


    <ListView
        android:id="@+id/listView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:layout_below="@+id/btnxylocation">
    </ListView>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="textView3"
        android:layout_below="@+id/btnchart"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/textView2" />
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="textView4"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/textView3" />


    <Button
        android:id="@+id/button1"
        android:layout_width="200dp"
        android:layout_height="65dp"
        android:text="@string/start_scan"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/btnxylocation" />

    <Button
        android:id="@+id/but002"
        android:layout_width="200dp"
        android:layout_height="65dp"
        android:text="002"
        android:layout_below="@+id/button1"
        android:layout_alignEnd="@+id/listView1"
        android:layout_toEndOf="@+id/btnxylocation"
        android:layout_alignStart="@+id/button1"
        android:layout_above="@+id/listView1" />

    <Button
        android:id="@+id/btnxylocation"
        android:layout_width="200dp"
        android:layout_height="65dp"
        android:text="XYlocation"
        android:layout_below="@+id/btnchart"
        android:layout_toStartOf="@+id/button1"
        android:layout_marginEnd="10dp" />

    <Button
        android:id="@+id/btnchart"
        android:layout_width="200dp"
        android:layout_height="65dp"
        android:text="WIFIChart"
        android:layout_alignStart="@+id/btnxylocation"
        android:layout_alignEnd="@+id/btnxylocation" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wifi_ssid"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wifi_analysis"
        android:layout_alignBaseline="@+id/btnchart"
        android:layout_alignBottom="@+id/btnchart"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/textView1" />

</RelativeLayout>
